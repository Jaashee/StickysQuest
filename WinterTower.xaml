<Page x:Class="TheGame.WinterTower"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WinterTower">

    <Grid>
        <Canvas Name="FightCanvas" Focusable="True">
            <Label Content="WINTER TOWER" VerticalAlignment="Top" Width="363" FontSize="48" FontWeight="Bold" FontFamily="Algerian" HorizontalAlignment="Left" Canvas.Left="273" Canvas.Top="21"/>
            <Rectangle Name="Player" Height="250" Width="250" Fill="Yellow" Canvas.Left="216" Canvas.Top="129"/>
            <Rectangle Name="WinterEnemy1" Height="250" Width="250" Fill="Yellow" Canvas.Left="528" Canvas.Top="129" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Rectangle Name="WinterEnemy2" Height="250" Width="250" Fill="Yellow" Canvas.Left="528" Canvas.Top="129" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Rectangle Name="WinterEnemy3" Height="250" Width="250" Fill="Yellow" Canvas.Left="528" Canvas.Top="129" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button Name="btnAttack" Content="ATTACK" Canvas.Left="49" Canvas.Top="138" HorizontalAlignment="Left" VerticalAlignment="Top" Width="145" Click="btnAttack_Click" Height="42"/>
            <Button Name="btnBack" Content="Back" Canvas.Left="653" Canvas.Top="56" Height="36" Width="121" Click="btnBack_Click"/>
            <Label Name ="lblScore" Content="Score =" VerticalAlignment="Center" Width="257" FontSize="48" FontWeight="Bold" FontFamily="Algerian" HorizontalAlignment="Left" Canvas.Left="16" Canvas.Top="21"/>

        </Canvas>

    </Grid>
</Page>
