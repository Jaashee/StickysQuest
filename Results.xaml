<Page x:Class="TheGame.Results"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Results">

    <Grid>


        <Rectangle Name="PlayerRect" Height="250" Width="250" Fill="Yellow" Canvas.Left="140" Canvas.Top="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="33,151,0,0"/>
        <Rectangle Name="EnemyRect" Height="250" Width="250" Fill="Yellow" Canvas.Left="527" Canvas.Top="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="514,151,0,0"/>
        <Label x:Name="lblResult" Content="Victory" HorizontalAlignment="Center" Margin="0,67,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Background="#00000000" Foreground="#FF01A40B"/>
        <Rectangle x:Name="RectPlayerHat" Height="250" Width="250" Fill="Yellow" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="33,151,0,0"/>
        <Button x:Name="btnContinue" Content="Button" HorizontalAlignment="Left" Margin="373,401,0,0" VerticalAlignment="Top" Click="btnContinue_Click"/>

    </Grid>
</Page>
