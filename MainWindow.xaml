<Window x:Class="TheGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:TheGame"
        mc:Ignorable="d"
        Title="Sticky's Quest" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen" >

    <Grid>
        <Image x:Name="imgTitle" Source="/Images/castle.png" Stretch="Fill" Visibility="Collapsed"/>
        <Image x:Name="imgTower" gif:ImageBehavior.AnimatedSource="/Images/dungeon.gif" Stretch="Fill" Visibility="Collapsed"/>
        <Frame x:Name="frmMasterFrame" Source="TitleScreen.xaml" NavigationUIVisibility="Hidden" Margin="0"/>
    </Grid>
</Window>
