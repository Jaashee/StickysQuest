<Page x:Class="TheGame.TitleScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TitleScreen">

    <Grid VerticalAlignment="Top" Height="424" Margin="0,10,0,0">
        
        <Button x:Name="btnStart" Content="Begin" HorizontalAlignment="Center" VerticalAlignment="Top" Height="33" Width="184" Margin="0,233,0,0" Click="btnStart_Click"/>
        <Button x:Name="btnOptions" Content="Options" HorizontalAlignment="Center" VerticalAlignment="Top" Height="33" Width="184" Margin="0,290,0,0" Click="btnOptions_Click"/>
        <Button x:Name="btnQuit" Content="Quit" HorizontalAlignment="Center" VerticalAlignment="Top" Height="33" Width="184" Margin="0,347,0,0" Click="btnQuit_Click"/>

    </Grid>
</Page>
